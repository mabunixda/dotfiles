#!/bin/sh

# go path
export GOPATH="${HOME}/.go"
if [[ "$OSTYPE" != "darwin"* ]]; then
  export GOROOT=/usr/lib/go
fi
# update path
export PATH=/usr/local/bin:/usr/local/go/bin:$PATH:$GOPATH/bin:/usr/share/bcc/tools:/sbin:$HOME/google-cloud-sdk/bin

# update cdpath
export CDPATH=${CDPATH}:$GOPATH/src/github.com:$GOPATH/src/golang.org:$GOPATH/src

