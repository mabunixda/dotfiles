#!/bin/bash
set -o pipefail

spotify() {
    spotify_exists=$(docker ps -a -q -f Name=spotify 2>/dev/null)
    if [[ -z "$spotify_exists" ]]; then
		docker run -d \
			-v /etc/localtime:/etc/localtime:ro \
			-v /tmp/.X11-unix:/tmp/.X11-unix \
			-e DISPLAY=unix$DISPLAY \
			--device /dev/snd:/dev/snd \
			-v $HOME/.spotify/config:/home/spotify/.config/spotify \
			-v $HOME/.spotify/cache:/home/spotify/spotify \
			--name spotify \
			spotify
	else
		spotify_state=$(docker inspect --format "{{.State.Running}}" spotify 2>/dev/null)
		if [[ "$spotify_state" == "true" ]]; then
			echo "spotify is running"
		else
			echo "starting container..."
			docker start spotify
		fi
	fi
}

spotify "$@"

